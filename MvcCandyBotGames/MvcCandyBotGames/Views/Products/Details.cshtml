@model MvcCandyBotGames.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>@Model.Title</h2>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <div class="row">        
        <div class="col col-md-2">
            <img alt="@Model.Title" src="@Model.GameArtUrl" class="img-thumbnail" />
        </div>
        <div class="col col-md-5" style="padding-top:5%;">
            <dl class="dl-horizontal" style="font-size:x-large;">

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Developer.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Developer.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Genre.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Genre.Name)
                </dd>

            </dl>
        </div>
    </div>
</div>
<br />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
