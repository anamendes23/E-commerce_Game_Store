@model MvcCandyBotGames.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2>@Model.Title</h2>
    </div>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col col-md-2">
            <img alt="@Model.Title" src="@Model.GameArtUrl" class="img-thumbnail" />
        </div>
        <div class="col col-md-5" style="padding-top:5%;">
            <dl class="dl-horizontal" style="font-size:x-large;">

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Developer.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Developer.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Genre.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Genre.Name)
                </dd>

            </dl>
        </div>
    </div>
</div>
<br />
<p>
    <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = Model.ProductID})" class="btn btn-primary btn-danger">Add to Cart</a>
    <a href="@Url.Action("Index", "Store")" class="btn btn-primary btn-danger">Back to list</a>
</p>

