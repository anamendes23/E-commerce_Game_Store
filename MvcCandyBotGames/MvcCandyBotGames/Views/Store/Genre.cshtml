@model IEnumerable<MvcCandyBotGames.Models.Genre>

@{
    ViewBag.Title = "Genre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Genre</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Browse", "Browse", new { id = item.GenreID })
            </td>
        </tr>
    }

</table>

<p>
    <a href="@Url.Action("Index","Store")" class="btn btn-primary btn-danger">Back to Full List</a>
</p>
